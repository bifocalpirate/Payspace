@model Payspace.UI.Models.LoginModel

@{
    ViewData["Title"] = "Login";
}
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            
            <div class="card card-signin my-5">
                <div class="card-body">
                    <h5 class="card-title text-center">Sign In</h5>
                    @if (!string.IsNullOrEmpty(ViewBag.Message))
                    {
                        <div class="alert alert-danger" role="alert">
                            @ViewBag.Message
                        </div>
                    }
                    <form class="form-signin" asp-action="Login" asp-controller="Login" asp-route-returnurl="@ViewData["ReturnUrl"]">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-label-group">
                            <input type="email" asp-for="EmailAddress" value="zizek@test.com" class="form-control" placeholder="Email address" required autofocus>
                            <label asp-for="EmailAddress">Email address</label>
                        </div>
                        <span asp-validation-for="EmailAddress" class="text-danger"></span>

                        <div class="form-label-group">
                            <input type="password" asp-for="Password" class="form-control" value="password" placeholder="Password" required>
                            <label asp-for="Password">Password</label>
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                        <div class="custom-control custom-checkbox mb-3">
                            <input type="checkbox" class="custom-control-input" asp-for="RememberMe">
                            <label class="custom-control-label" asp-for="RememberMe">Remember me</label>
                        </div>
                        <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Sign in</button>
                    </form>
                </div>
            </div>
        </div>  





        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
